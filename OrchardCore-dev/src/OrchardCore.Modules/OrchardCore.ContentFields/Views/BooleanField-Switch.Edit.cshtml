@model OrchardCore.ContentFields.ViewModels.EditBooleanFieldViewModel

@{
    var settings = Model.PartFieldDefinition.GetSettings<BooleanFieldSettings>();
}
<fieldset class="form-group">
    <span class="switch">
        <input asp-for="Value" type="checkbox" class="switch switch-sm content-preview-select" checked="@Model.Value" />
        <label asp-for="Value">@(string.IsNullOrEmpty(settings.Label) ? Model.PartFieldDefinition.DisplayName() : settings.Label)</label>
    </span>
    @if (!String.IsNullOrEmpty(settings.Hint))
    {
        <span class="hint">â€” @settings.Hint</span>
    }
</fieldset>